<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ORA.App.GUI.Views.SettingsView">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal">
      <Button Command="{Binding $parent[Window].DataContext.NavigateToHome}">Home</Button>
      <TextBlock>Settings</TextBlock>
    </StackPanel>

    <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                Height="30">
      <TextBlock>Base url: </TextBlock>
      <TextBox DockPanel.Dock="Top"
              Text="{Binding BaseUrl}"
              Width="200" />
      <Button Command="{Binding SetBaseUrl}">Set base url</Button>
    </StackPanel>
  </DockPanel>
</UserControl>
