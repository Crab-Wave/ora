<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ORA.App.GUI.Views.AddClusterItemView">
  <DockPanel>
    <Button DockPanel.Dock="Bottom" Content="Cancel" Command="{Binding Cancel}"></Button>
    <Button DockPanel.Dock="Bottom" Content="OK" Command="{Binding Ok}"></Button>
    <TextBox Text="{Binding Name}"
             Watermark="Enter your TODO"/>
  </DockPanel>
</UserControl>
